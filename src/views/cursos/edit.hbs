{{#if user}}
    {{#if user.permisos}}
        <div class="container p-4">
    <div class="row my-5">
        <section class="col-4 col-md-2">
            <section class="card" style="background-color: #FF7582; color:white;">
                <div class="card-body text-center">
                    <p>Regresar</p>
                    <a class="link-btn" href="/cursos/"><button class="btn-icon"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z"/>
  <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z"/>
</svg></button></a>
                </div>
            </section>
        </section>
        <section class="col-8">
            <section class="card card-titles">
                        <div class="card-body px-4">
                            <h3 class="card-title"><b>Editar Curso: {{cursos.title}}</b></h3>
                        </div>
            </section>
        </section>
        <section class="col-2 d-none d-sm-block">
            <section class="card" style="background-color: #6F88FC; color:white;">
                <div class="card-body text-center">
                    <script type="text/javascript">
                        var d = new Date();
                        document.write('Fecha:<br>'+d.getDate(),'/'+d.getMonth(),'/'+d.getFullYear(),'<br>Hora:<br>'+d.getHours(),':'+d.getMinutes());
                    </script>
                </div>
            </section>
        </section>
    </div>
            <div class="row">
                <div class="col-md-4 mx-auto">
                    <div class="card">
                        <div class="card-body">
                            <form  action="/cursos/edit/{{cursos.id}}" method="post">
                                <div class="form-group" style="text-align: center">
                                    <h4>Título:</h4>
                                    <input value="{{cursos.title}}" type="text" class="form-control" name="title" placeholder="Titulo" autofocus>
                                </div>
                                <br>
                                <div class="form-group" style="text-align: center">
                                    <h4>Descripción:</h4>
                                    <textarea name="description" rows="2" class="form-control" placeholder="Descripcion">{{cursos.description}}</textarea>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-success btn-block" id="form_btn">
                                        Editar.
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <div style="text-align: center">
            <p>Tú no puedes acceder aquí.</p>
        </div>
    {{/if}}
{{else}}
{{/if}}