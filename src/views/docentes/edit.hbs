 {{#if user.permisosAdmin}}
        <div class="container p-4" style= "width: available; margin-bottom: 20vh">
            <div class="row pt-5 mb-5">
                <section class="col-4 col-md-2">
                    <section class="card" style="background-color: #FF7582; color:white;">
                        <div class="card-body text-center">
                            <p>Volver</p>
                            <a class="link-btn"  href="javascript:history.back()"><button class="btn-icon"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z"/>
                                <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z"/>
                            </svg></button></a>
                        </div>
                    </section>
                </section>
                <section class="col-8">
                    <section class="card card-titles">
                                <div class="card-body px-4">
                                    <h3 class="card-title" align="CENTER">Editar Usuario</h3>
                                </div>
                    </section>
                </section>
                <section class="col-2 d-none d-sm-block">
                    <section class="card" style="background-color: #6F88FC; color:white;">
                        <div class="card-body text-center">
                            <script type="text/javascript">
                                var d = new Date();
                                document.write('Fecha:<br>'+d.getDate(),'/'+d.getMonth(),'/'+d.getFullYear(),'<br>Hora:<br>'+d.getHours(),':'+d.getMinutes());
                            </script>
                        </div>
                    </section>
                </section>
            </div>
            <div class="row">
                <div class="col-md-4 mx-auto" style="text-align: center">
                    <div class="card">
                        <div class="card-body">
                            <form action="/docentes/edit/{{docentes.id}}" method="post" style="text-align: center;">
                                <div class="form-group">
                                    <h4>Nombre de usuario:</h4>
                                    <input type="text" value="{{docentes.username}}" class="form-control" name="username" placeholder="Username" autofocus>
                                </div>
                                <div class="form-group">
                                    <h4>Nombre completo:</h4>
                                    <input type="text" value="{{docentes.fullname}}" class="form-control" name="fullname" placeholder="Nombre completo" >
                                </div>
                                <div class="form-group">
                                    <h4>Correo:</h4>
                                    <input type="text" value="{{docentes.email}}" class="form-control" name="email" placeholder="Correo electronico" >
                                </div>
                                <div class="form-group">
                                    <h4>Permisos:</h4>
                                    <label>
                                        {{#if permisos}}
                                            <select name="permisosList">
                                                <option>Docente</option>
                                                <option>Estudiante</option>
                                                <option>Administrador</option>
                                            </select>
                                        {{else}}
                                            {{#if permisosAdmin}}
                                                <select name="permisosList">
                                                    <option>Administrador</option>
                                                    <option>Docente</option>
                                                    <option>Estudiante</option>
                                                </select>
                                            {{else}}
                                                <select name="permisosList">
                                                    <option>Estudiante</option>
                                                    <option>Docente</option>
                                                    <option>Administrador</option>
                                                </select>
                                            {{/if}}
                                        {{/if}}
                                    </label>
                                </div>
                                <div class="form-group" style="text-align: center; height: fit-content;">
                                    <h4>Enlace de imagen de perfil:</h4>
                                    <input type="url" class="form-control" id="url" value="{{docentes.imagen}}" name="imagen" placeholder="URL" onchange="document.getElementById('blah').src = document.getElementById('url').value">
                                    <div style="width: 100%;height:fit-content; padding: 10px">
                                       <img id="blah" alt="Tu imagen de perfil" width="100%" src="{{docentes.imagen}}"/>
                                    </div>
                                </div>
                                    <button id="form_btn" style="width: 100%; height: 4vh">
                                        Editar.
                                    </button>
                            </form>
                            <a href="/docentes/delete/{{docentes.id}}"><button class="btn-red" style="width: 100%; height: 5%">Eliminar</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <div style="text-align: center">
            <p>Tú no puedes acceder aquí</p>
        </div>
    {{/if}}