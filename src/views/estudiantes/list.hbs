{{#if user.permisosAdmin}}
    <div class="container">
        <div class="row pt-5 mb-5">
            <section class="col-4 col-md-2">
                <section class="card" style="background-color: #FF7582; color:white;">
                    <div class="card-body text-center">
                        <p>Volver</p>
                        <a class="link-btn" href="/cursos/"><button class="btn-icon"></button></a>
                    </div>
                </section>
            </section>
            <section class="col-8">
                <section class="card card-titlesb">
                            <div class="card-body px-4">
                                <h3 class="card-title" align="CENTER">Estudiantes</h3>
                                <p class="card-text">¡En esta sección puede supervisar el progreso de los alumnos y supervisarlos, haga clic sobre uno para revisarlo!</p>
                            </div>
                        </section>
                </section>
            <section class="col-2 d-none d-sm-block">
                <section class="card" style="background-color: #6F88FC; color:white;">
                    <div class="card-body text-center">
                        <script type="text/javascript">
                            var d = new Date();
                            document.write('Fecha:<br>'+d.getDate(),'/'+d.getMonth(),'/'+d.getFullYear(),'<br>Hora:<br>'+d.getHours(),':'+d.getMinutes());
                        </script>
                    </div>
                </section>
            </section>
        </div>
    </div>
    <!--Lista-->
    <div class="container p-4">
        <div class="row" style="margin-bottom: 20vh">
            {{#each estudiantes}}
                <div class="col-xs-3 col-md-3 col-sm-6 p-2" >
                    <a href="/estudiantes/edit/{{users_id}}" style="text-decoration: none; color: black">
                        <div class="card text-center" style="border: 0;height: 100%">
                            <div class="card-header" style="background-color: #59989E;color: white;">
                                <h3 class="card-title text-uppercase" >
                                    {{username}}
                                </h3>
                            </div>
                            <div class="card-body" style="background-color: rgba(89,152,158,0.45);height: fit-content;">
                                <img src="{{imagen}}" style="height: 10vh;">
                                <p class="m-2">{{fullname}}</p>
                            </div>
                        </div>
                    </a>
                </div>

            {{else}}
                <div class="col-md-4 mx-auto">
                    <div class="card card-body text-center">
                        <p>¿Quieres agregar nuevos estudiantes?</p>
                        <p>¡Invítalos!</p>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
